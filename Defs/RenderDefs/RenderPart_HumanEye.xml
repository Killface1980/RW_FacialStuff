<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<PawnPlus.Defs.EyeRenderDef>
		<!-- Both male and female narrow crown head textures have nearly identical eye offsets -->
		<defName>FSHumanEyeRenderNarrow</defName>
		<parts>
			<!-- Left Eye -->
			<li>
				<attachment>Head</attachment>
				<linkedRacesBodyPart>
					<li>
						<!-- defName of BodyDef. Only one item is allowed for each BodyDef. -->
						<key>Human</key>
						<value>
							<bodyPartDef>Eye</bodyPartDef>
							<bodyPartLabel>left eye</bodyPartLabel>
						</value>
					</li>
				</linkedRacesBodyPart>
				<perRotation>
					<!-- 
					If rotation is missing in this list, the part isn't rendered for that rotation 
					(ex. North and east for left eye) 
					-->
					<!-- South -->
					<li>
						<!--
						Indicates what rotation the following properties are for. If there are duplicate rotation in this list, 
						whatever comes last in the list will be used 
						-->
						<rotation>South</rotation>
						<meshDef>FSEyeMesh_mirrored</meshDef>
						<!-- 
						The offset from center of head. Note that the head mesh is 1.5 by 1.5 in size. 
						Additional offsets can be defined in PartDef also.
						--> 
						<offset>(0.0938, 0.002, -0.0703)</offset>
					</li>
					<!-- West -->
					<li>
						<rotation>West</rotation>
						<meshDef>FSEyeMesh_mirrored</meshDef>
						<offset>(-0.1055, 0.002, -0.0703)</offset>
					</li>
				</perRotation>
			</li>
			<!-- Right Eye -->
			<li>
				<attachment>Head</attachment>
				<linkedRacesBodyPart>
					<li>
						<key>Human</key>
						<value>
							<bodyPartDef>Eye</bodyPartDef>
							<bodyPartLabel>right eye</bodyPartLabel>
						</value>
					</li>
				</linkedRacesBodyPart>
				<perRotation>
					<!-- East -->
					<li>
						<rotation>East</rotation>
						<meshDef>FSEyeMesh</meshDef>
						<offset>(0.1055, 0.002, -0.0703)</offset>
					</li>
					<!-- South -->
					<li>
						<rotation>South</rotation>
						<meshDef>FSEyeMesh</meshDef>
						<offset>(-0.0938, 0.002, -0.0703)</offset>
					</li>
				</perRotation>
			</li>
		</parts>
	</PawnPlus.Defs.EyeRenderDef>
	
