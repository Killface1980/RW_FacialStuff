<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<FacialStuff.Defs.MouthSetDef>
		<defName>FSHumanMouth</defName>
		<hairGender>Any</hairGender>
		<allowedRaceThingDefs>
			<li>Human</li>
		</allowedRaceThingDefs>
		<texBasePath>Things/Pawn/Humanlike/Mouth/</texBasePath>
		<!-- The list of texture names that can be used by mouthBehavior in HumanPatch.xml -->
		<texNames>
			<li>HumanM1Extreme</li>
			<li>HumanM1Major</li>
			<li>HumanM1Minor</li>
			<li>HumanM1Normal</li>
			<li>HumanM1Happy</li>
			<li>HumanM1Crying</li>
		</texNames>
		<!-- 
		If none of mouthBehaviors (see HumanPatch.xml) incorporate the current mood level and 
		meet the condition, use the following texture instead. This will also be the texture 
		used when drawing portraits in colonist bar
		-->
		<defaultMouth>Normal</defaultMouth>
		<!-- The texture to use when the pawn is dead -->
		<deadMouth>Dead</deadMouth>
		<hairTags>
			<li>Urban</li>
			<li>Rural</li>
			<li>Punk</li>
			<li>Tribal</li>
		</hairTags>
	</FacialStuff.Defs.MouthSetDef>
</Defs>